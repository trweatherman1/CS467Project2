<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trent.cs467project2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/poker"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Player_Name"
            android:label="@string/title_activity_player__name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Play"
            android:label="@string/title_activity_play"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".View_Hand"
            android:label="@string/title_activity_view__hand"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".WinList"
            android:label="@string/title_activity_win_list"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LargeScreen"
            android:label="@string/title_activity_large_screen" >
        </activity>
        <activity
            android:name=".PlayFragment"
            android:label="@string/title_activity_play_fragment"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
