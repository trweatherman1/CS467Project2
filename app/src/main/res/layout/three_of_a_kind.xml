<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/three_of_a_kind"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:textSize="30sp"
        android:textColor="@color/catamount_gold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView31"
            android:layout_weight=".2"
            android:background="@drawable/c7_of_hearts" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView32"
            android:layout_weight=".2"
            android:background="@drawable/c9_of_diamonds" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView33"
            android:layout_weight=".2"
            android:background="@drawable/c9_of_clubs" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView34"
            android:layout_weight=".2"
            android:background="@drawable/c9_of_spades" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView35"
            android:layout_weight=".2"
            android:background="@drawable/queen_of_hearts" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/three_explain"
        android:id="@+id/textView24"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:textSize="30sp"
        android:textColor="@color/catamount_gold" />
</LinearLayout>
