<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/straight_hand"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:textSize="30sp"
        android:textColor="@color/catamount_gold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView26"
            android:layout_weight=".2"
            android:background="@drawable/c7_of_hearts" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView27"
            android:layout_weight=".2"
            android:background="@drawable/c8_of_diamonds" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView28"
            android:layout_weight=".2"
            android:background="@drawable/c9_of_clubs" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView29"
            android:layout_weight=".2"
            android:background="@drawable/c10_of_spades" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView30"
            android:layout_weight=".2"
            android:background="@drawable/jack_of_hearts" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/straight_explain"
        android:id="@+id/textView23"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:textSize="30sp"
        android:textColor="@color/catamount_gold" />
</LinearLayout>
